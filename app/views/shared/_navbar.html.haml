.navbar.navbar-expand-sm.navbar-light.navbar-lewagon
  = link_to root_path, class: "navbar-brand" do
    = image_tag logo_image_url
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to 'Posts', posts_path, class: "nav-link"
      %li.nav-item
        = link_to 'Sponsor\'s Posts', sponsors_posts_path, class: "nav-link"
      %li.nav-item
        = link_to "#{icon('fas','pen-fancy')} Write".html_safe, new_post_path, class: "btn btn-white"
      - if user_signed_in?
        %li.nav-item.active
          = link_to "My posts", user_path(current_user), class: "nav-link"
        %li.nav-item
          = link_to "Messages", "#", class: "nav-link"
        %li.nav-item.dropdown
          = image_tag current_user.avatar_image_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdown"}
            %p.dropdown-item Hi #{current_user.name}
            = link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item"
            = link_to "Another action", "#", class: "dropdown-item"
            = link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item"
      - else
        %li.nav-item
          = link_to "Login", new_user_session_path, class: "nav-link"
